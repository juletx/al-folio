{% assign lang = site.lang | split: '-' | first %}

{% case lang %}
  {% when 'pt' %}
    {% assign lang = site.lang %}

  {% when 'zh' %}
    {% assign lang_last = site.lang | split: '-' | last %}
    {% case lang_last %}
      {% when 'cn', 'sg', 'my', 'hans' %}
        {% assign lang = 'cn' %}
      {% when 'tw', 'hk', 'mo', 'hant' %}
        {% assign lang = 'zh-tw' %}
    {% endcase %}
{% endcase %}

<div class="repo p-2 text-center">
  <a href="https://github.com/{{ include.username }}">
    <img
      class="only-light w-100"
      alt="{{ include.username }}"
      src="{{ site.external_services.github_readme_stats_url }}/api/top-langs/?username={{ include.username }}&theme={{ site.repo_theme_light }}&locale={{ lang }}&layout=compact&langs_count=10&custom_title=Top%20Languages"
    >
    <img
      class="only-dark w-100"
      alt="{{ include.username }}"
      src="{{ site.external_services.github_readme_stats_url }}/api/top-langs/?username={{ include.username }}&theme={{ site.repo_theme_dark }}&locale={{ lang }}&layout=compact&langs_count=10&custom_title=Top%20Languages"
    >
  </a>
</div>
